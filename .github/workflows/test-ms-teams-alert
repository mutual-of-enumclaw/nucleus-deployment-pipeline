name: Test MS Teams Alert

on:
 workflow_call:
    inputs:
      webhook_uri:
        description: 'webhook_uri'
        required: true
        default: ''
        type: string
      title:
        description: 'title'
        required: false
        default: ''
        type: string
      summary:
        description: 'summary'
        required: true
        default: ''
        type: string
      text:
        description: 'text'
        required: false
        default: ''
        type: string
      theme_color:
        description: 'theme_color'
        required: false
        default: ''
        type: string

jobs:
  runTests:
    name: Send a message to Microsoft Teams
    runs-on: ubuntu-latest
    steps:
      name: Send a message to Microsoft Teams
      uses: aliencube/microsoft-teams-actions@v0.8.0
      with:
        webhook_uri:  ${{ inputs.webhook_uri }}
        title:  ${{ inputs.title }}
        summary:  ${{ inputs.summary }}
        text:  ${{ inputs.text }}
        theme_color:  ${{ inputs.theme_color }}
